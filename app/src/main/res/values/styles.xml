<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowDisablePreview">true</item>

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="PopupAnimation" mce_bogus="1" parent="android:Animation">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>


    <style name="Theme.Splash" parent="AppTheme">
        <item name="windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@color/c0</item>
        <!--<item name="android:windowFullscreen">true</item>-->
    </style>


    <style name="main_tab_img_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="main_tab_layout_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">vertical</item>
    </style>

    <!-- 分割线 -->
    <style name="c9_horizontal_line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp_0_1</item>
        <item name="android:background">@color/c9</item>
    </style>

    <!-- 输入框样式 -->
    <style name="c7_t3_edit_text">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textColorHint">@color/c7</item>
        <item name="android:textSize">@dimen/t3</item>
        <item name="android:textColor">@color/c8</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:background">@null</item>
    </style>

    <!-- 正常字体 -->
    <style name="t1_style"><!-- 顶部标题 -->
        <item name="android:textSize">@dimen/t1</item>
        <item name="android:textColor">@color/c8</item>
    </style>

    <style name="t2_style"><!-- 次要标题、表单标题和提示 -->
        <item name="android:textSize">@dimen/t2</item>
        <item name="android:textColor">@color/c8</item>
    </style>

    <style name="t3_style"><!-- 列表主要信息 -->
        <item name="android:textSize">@dimen/t3</item>
        <item name="android:textColor">@color/c8</item>
    </style>

    <style name="t4_style"><!-- 段落、提示、余额 -->
        <item name="android:textSize">@dimen/t4</item>
        <item name="android:textColor">@color/c8</item>
    </style>

    <style name="t5_style"><!-- 助记词序号 -->
        <item name="android:textSize">@dimen/t5</item>
        <item name="android:textColor">@color/c8</item>
    </style>

    <!-- 粗体 -->
    <style name="b0_style"><!-- 大标题、展示性数据、粗体 -->
        <item name="android:textSize">@dimen/t0</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/c8</item>
    </style>

    <style name="b1_style"><!-- 重要标题、金额、粗体 -->
        <item name="android:textSize">@dimen/t1</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/c8</item>
    </style>

    <style name="b2_style"><!-- 按钮文字、粗体 -->
        <item name="android:textSize">@dimen/t2</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/c8</item>
    </style>

    <style name="b3_style"><!-- 资产列表信息、粗体 -->
        <item name="android:textSize">@dimen/t3</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/c8</item>
    </style>

    <style name="b4_style"><!-- 列表选中状态信息、粗体 -->
        <item name="android:textSize">@dimen/t4</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/c8</item>
    </style>

    <style name="b5_style"><!-- 完整地址、可点击、可复制的地址、粗体 -->
        <item name="android:textSize">@dimen/t5</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/c8</item>
    </style>

    <!-- 其他字体组合样式 -->
